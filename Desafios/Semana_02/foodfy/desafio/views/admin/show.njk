{% extends 'admin_layout.njk' %}

{% block title %}
    {% if recipe %}
        <title>Foodfy |
            {{recipe.title}}</title>
    {% else %}
        <title>Foodfy | Receitas
        </title>
    {% endif %}
{% endblock %}

{% block content %}

    <div class="subheader">
        <div class="admin_recipe_info">
            Receita: {{recipe.title}}
        </div>

        <div class="admin_recipe_edit">
            <a href="#">Editar Receita</a>
        </div>
    </div>

    <div class="recipe-complete">
        <div class="recipe-img">
            <img src="{{recipe.image}}" alt="Image of {{recipe.title}}">
        </div>

        <div class="recipe-description">
            <h1>{{recipe.title}}</h1>
        </div>

        <div class="recipe-author">
            <h2>por
                {{recipe.author}}</h2>
        </div>

        <div class="part">
            <div class="subtitle-head">
                <div class="subtitle-title">Ingredientes</div>
            </div>

            <div class="wrapper" id="ingredients">
                <ul>
                    {% for ingredient in recipe.ingredients%}
                        <li>{{ingredient}}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="part">
            <div class="subtitle-head">
                <div class="subtitle-title">Modo de Preparo</div>
            </div>

            <div class="wrapper" id="preparation">
                {% for step in recipe.preparation %}
                    <p>{{step}}</p>
                {% endfor %}
            </div>

        </div>

        <div class="part">
            <div class="subtitle-head">
                <div class="subtitle-title">Informaçōes Adicionais</div>
            </div>

            <div class="wrapper" id='info'>
                <p>{{recipe.information}}</p>
            </div>
        </div>
    </div>

{% endblock %}