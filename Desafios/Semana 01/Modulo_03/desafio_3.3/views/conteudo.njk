{% extends "layout.njk" %}

{% block head %}
    <title>Conteudo - Rocketseat</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
{% endblock %}

{% block content %}

        <section class="cursos">
            {% for item in items %}
                <div class="curso" id={{item.id}}>
                    <div class="curso_photo logo_grande">
                        <img src={{item.img_url}} alt={{item.name}}>
                    </div>
                    <div class="curso_info">
                        <h1>{{item.name}}</h1>
                    </div>

                    <div class="modulos">
                        <p>Quantidade de Modulos: {{item.modules}}</p>
                    </div>
                    <div class="price">
                        <p>{{item.price}}</p>
                    </div>
                </div>
            {% endfor %}
        </section>
        
        <script src="/scripts.js"></script>

{% endblock %}
