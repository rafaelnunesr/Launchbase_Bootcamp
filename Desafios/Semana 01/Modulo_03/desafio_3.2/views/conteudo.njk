{% extends "layout.njk" %}

{% block head %}
    <title>Conteudo - Rocketseat</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
{% endblock %}

{% block content %}

        <section class="cursos">
            {% for item in items %}
                <div class="curso" id={{item.name}}>
                    <div class="curso_photo logo_grande">
                        <img src={{item.img_url}} alt={{item.name}}>
                    </div>
                    <div class="curso_info">
                        <h1>{{item.name}}</h1>
                    </div>

                    <div class="modulos">
                        <p>Quantidade de Modulos: {{item.modules}}</p>
                    </div>
                    <div class="price">
                        <p>{{item.price}}</p>
                    </div>
                </div>
            {% endfor %}
        </section>

        <div class="modal-overlay">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>

                <a class="maximize">
                    <i class="material-icons">
                        fullscreen
                        </i>
                </a>

                <div class="modal-content">
                    <!-- Video aqui -->
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>
        </div>
        
        <script src="/scripts.js"></script>

{% endblock %}
