<div class="admin-recipes">

    {% if recipes %}
        {% for recipe in recipes %}

            <div class="admin-recipe">
                <div class="admin-recipe-img">
                    <img src="{{recipe.photo}}" alt="{{recipe.name}}">
                </div>

                <div class="admin-recipe-info">
                    <div class="admin-recipe-name">
                        <h2>{{recipe.name}}</h2>
                    </div>

                    <div class="admin-recipe-chef">
                        <p>Por {{recipe.chef_name}}</p>
                    </div>

                    <div class="admin-recipe-view">
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                        <a href="/admin/recipes/{{recipe.id}}/edit">Editar</a>
                    </div>
                </div>

            </div>
        {% endfor %}
    {% else %}
        {% for recipe in chef.recipes %}
            <div class="admin-recipe">
                <div class="admin-recipe-img">
                    <a href="/admin/recipes/{{recipe.id}}">
                        <img src="{{recipe.photo}}" alt="{{recipe.name}}">
                    </a>
                </div>

                <div class="admin-recipe-info">
                    <div class="admin-recipe-name">
                        <h2>{{recipe.name}}</h2>
                    </div>

                    <div class="admin-recipe-chef">
                        <p>Por {{chef.name}}</p>
                    </div>

                    <div class="admin-recipe-view">
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>
                </div>

            </div>
        {% endfor %}
    {% endif %}

</div>