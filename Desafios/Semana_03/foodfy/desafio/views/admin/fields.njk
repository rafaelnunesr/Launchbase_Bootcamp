<div class="item">
    <div class="author">
        <h1>Nome do Chef</h1>
        <input type="text" 
               name="author"
               placeholder="Seu nome e sobrenome" 
               value="{{recipe.author}}">
    </div>
</div>

<div class="item">
    <div class="title">
        <h1>Nome da receita</h1>
        <input type="text" 
               name="title"
               placeholder="Titulo da receita" 
               value="{{recipe.title}}">
    </div>
</div>

<div class="item">
    <div class="image">
        <h1>Imagem da receita</h1>
        <input type="text" 
               name="image"
               placeholder="Insira a url da imagem" 
               value="{{recipe.image}}">
    </div>
</div>

<div class="item">
    <div class="ingredients">
            <h1>Ingredients</h1>
            <div class="ingredient">
                {% if recipe.ingredients %}
                    {% for ingredient in recipe.ingredients %}
                        <input 
                            type="text" 
                            name="ingredients"
                            placeholder="Ingrediente" 
                            value="{{ingredient}}">
                    {% endfor %}
                {% else %}
                    <input 
                        type="text" 
                        name="ingredients"
                        placeholder="Ingrediente">
                {% endif %}
            </div>
            <button type='button' class='add-ingredient'>Add ingrediente</button>
    </div>
</div>

<div class="item">
    <div class="preparations">
            <h1>Modo de preparo</h1>
            <div class="preparation">
                {% if recipe.preparation %}
                    {% for prep in recipe.preparation %}
                        <input 
                            type="text" 
                            name="preparation"
                            placeholder="Modo de preparo" 
                            value="{{prep}}">
                    {% endfor %}
                {% else %}
                    <input 
                        type="text" 
                        name="preparation"
                        placeholder="Modo de preparo">
                {% endif %}
            </div>
            <button type='button' class='add-preparation'>Add preparo</button>
    </div>
</div>

<div class="item">
        <div class="information">
            <h1>Informações adicionais</h1>
            <textarea name="information">{{recipe.information}}</textarea>
        </div>
</div>